# Odoo {{ version }} Native Development Environment ({{ env_name }})
# Generated by odoodev
#
# This configuration is for the hybrid setup:
# - Odoo runs natively on macOS/Linux with UV virtual environment
# - PostgreSQL runs in Docker container
# - wkhtmltopdf is installed natively on the host system

# Environment Identification
ENV_NAME={{ env_name }}
ODOO_VERSION={{ version }}

# Platform (macos|linux)
# Auto-detected by odoodev; override manually if needed
PLATFORM={{ platform }}

# Developer identification (used for container naming)
DEV_USER={{ dev_user }}

# Database configuration (PostgreSQL in Docker)
# Port must not conflict with other PostgreSQL instances
DB_PORT={{ db_port }}
# Database credentials (override defaults for non-dev environments)
PGUSER={{ db_user }}
PGPASSWORD={{ db_password }}

# Odoo HTTP ports (native server)
ODOO_PORT={{ odoo_port }}
GEVENT_PORT={{ gevent_port }}

# Mailpit configuration (Email testing - optional)
# Uncomment the mailpit service in docker-compose.yml to enable
MAILPIT_PORT={{ mailpit_port }}
MAILPIT_SMTP_PORT={{ smtp_port }}

# wkhtmltopdf (native installation)
# odoodev auto-detects the path. Override only if needed:
# WKHTMLTOPDF_PATH=/usr/local/bin/wkhtmltopdf
# WKHTMLTOPDF_PATH=/opt/homebrew/bin/wkhtmltopdf

# Docker Image Versions
# Centralized version management - change here, not in docker-compose.yml
POSTGRES_VERSION={{ postgres_version }}
MAILPIT_VERSION=latest

# Docker Platform (linux/amd64 | linux/arm64)
# Auto-detected by odoodev; override manually if needed
DOCKER_PLATFORM={{ docker_platform }}
